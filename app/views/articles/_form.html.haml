.row
  .col-sm-10.col-sm-offset-1
    = form_for(@article) do |f|
      - if @article.errors.any?
        #error_explanation
          %h2
            = pluralize(@article.errors.count, "error")
            prohibited this article from being saved:
          %ul
            - @article.errors.full_messages.each do |message|
              %li= message

      .field.col-sm-12
        = f.label :title
        %br/
        = f.text_field :title, class: "col-sm-12"
      .field.col-sm-12
        = f.label :banner_image
        %br/
        = f.file_field :banner_image
      .field.col-sm-12
        = f.label :content
        %br/
        = f.text_area :content, class: "col-sm-12 text_box", height: 200
        .field.col-sm-12
        = f.label :short_description
        %br/
        = f.text_area :short_description, class: "col-sm-12 text_box"
      .field.col-sm-12
        = f.label :meta_description
        %br/
        = f.text_area :meta_description, class: "col-sm-12"
      .field.col-sm-12
        = f.label :status
        %br/
        = f.select :status,options_for_select(Article.statuses.keys, @article.status || 1) , class: "col-sm-12"
      / .field.col-sm-12
      /   = f.label :show_banner_image_in_article_page
      /   %br/
      /   = f.check_box :banner_image_show
      .actions
        = f.submit class: "btn btn-primary"
